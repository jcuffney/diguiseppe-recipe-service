{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Recipie",
  "version": "0.0.1",
  "description": "table for recipe data",
  "type": "object",
  "required": ["id", "createdDate", "title", ""],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "description": "for indexing and consistency purposes; unique identifier",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
      "maxLength": 36,
      "minLength": 36
    },
    "createdDate": {
      "type": "string",
      "format": "date-time",
      "description": "When the record was created"
    },
    "editedDate": {
      "type": "string",
      "format": "date-time",
      "description": "When the record was last edited"
    },
    "title": {
      "type": "string",
      "description": "title of the recipe"
    },
    "author": {
      "type": "string",
      "description": "name of the recipe author"
    },
    "email": {
      "type": "string",
      "description": "email of the recipe author",
      "format": "email"
    },
    "imageUrl": {
      "type": "string",
      "description": "uri of an image of the completed recipe",
      "format": "uri"
    },
    "steps": {
      "type": "array",
      "description": "text instructions to execute recipe",
      "uniqueItems": true,
      "default": [],
      "items": {
        "type": "string"
      }
    },
    "ingredients": {
      "type": "array",
      "description": "list of ingredients needed for recpie",
      "uniqueItems": true,
      "default": [],
      "items": {
        "type": "object",
        "required": ["ingredient"],
        "properties": {
          "amount": { 
            "type": "number" 
          },
          "unit": { 
            "type": "string"
          },
          "ingredient": { 
            "type": "string"
          },
          "optional": { 
            "type": "boolean",
            "default": false
          }
        } 
      }
    },
    "category": {
      "type": "array",
      "description": "categories this recipe falls into",
      "uniqueItems": true,
      "default": [],
      "items": {
        "type": "string",
        "enum": [
          "appetizers",
          "soups and sauces",
          "salads",
          "breads",
          "vegetables and side dishes",
          "meats and fishes",
          "main dishes",
          "deserts",
          "cookies",
          "drinks"
        ]
      }
      
    },
    "tags": {
      "type": "array",
      "description": "other keywords this recipe might be searched by",
      "uniqueItems": true,
      "default": []
    },
    "duration": {
      "type": "object",
      "description": "the time it takes to make",
      "properties": {
        "time": {
          "type": "number"
        },
        "unit": {
          "type": "string",
          "enum": ["seconds", "minutes", "hours", "days"]
        }
      }
    },
    "description": {
      "type": "string",
      "description": "textual description of the recipe",
      "default": ""
    }
  }
}